/*implementation of stack using array*/
#include<stdio.h>
#include<stdlib.h>

#define STACK_SIZE 10

int push(int item, int *top, int s[])
{
    if(*top == STACK_SIZE-1)
    {
        printf("\nstack full");
        return 0;
        
    }
    s[++(*top)] == item; /*increment the stack pointer and then insert*/
    return 0;
    
}

int pop(int *top,int s[])
{
    int item;
    if(*top ==-1)
    {
        printf("\nstack empty");
        return 0;
        
    }
    item = s[(*top)--];/*pop the element and then decrement the stack pointer*/
    return item;
    
}

int display(int *top, int s[])
{
    int i;
    if(*top==-1)
    {
        printf("\nstack empty");
        return 0;
        
    }
    printf("\n Contents of the stack are: ");
    for(i=0;i<=(*top);i++)
    {
        printf("%d\n",s[i]);
        
    }
    return 0;
}

int main()
{
    int top;
    int s[STACK_SIZE];
    int input;
    int item;
    
    
    top=-1;
    for(;;)
    {
        printf("\n1 to push into the stack");
        printf("\n2 to pop ");
        printf("\n3 to disaply the stack content");
        printf("\n4 to exit");
        printf("\nenter your choice");
        scanf("%d",&input);
        
        switch(input)
        {
            case 1: printf("\nenter the item to be pushed: ");
                    scanf("%d",&item);
                    push(item,&top,s);
                    break;
            case 2: item = pop(&top,s);
                    if(item!=0)
                        printf("item %d is popped from the stack",item);
                    break;
            case 3: display(&top,s);
                    break;
            case 4: exit(0);
            default : printf("\nincorrect choice"); continue;
        }

    }
}
