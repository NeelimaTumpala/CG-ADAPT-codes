
/*compiled and executed successfully*/
/*implementation of stack using array and structure*/ 


#include<stdio.h>
#include<stdlib.h>

#define STACK_SIZE 5

typedef struct _STACK
{
    int items[STACK_SIZE];
    int top;
}stack;

int push(int item, stack s[])
{
    if(s->top == STACK_SIZE-1)
    {
        printf("\nstack full");
        return 0;
        
    }
    s->top++; /*increment the stack pointer and then insert*/
    s->items[s->top]=item;
    return 0;
    
}

int pop(stack *s)
{
    int item;
    if(s->top ==-1)
    {
        printf("\nstack empty");
        return 0;
        
    }
    item =s->items[s->top];/*pop the element and then decrement the stack pointer*/
    s->top--;
    return item;
    
}

int display(stack *s)
{
    int i;
    if(s->top==-1)
    {
        printf("\nstack empty");
        return 0;
        
    }
    printf("\n Contents of the stack are: ");
    for(i=0;i<=s->top;i++)
    {
        printf("%d\n",s->items[i]);
        
    }
    return 0;
}

int main()
{
    int top;
    stack s;
    int input;
    int item;
    s.top=-1;
    
    
    top=-1;
    for(;;)
    {
        printf("\n1 to push into the stack");
        printf("\n2 to pop ");
        printf("\n3 to disaply the stack content");
        printf("\n4 to exit");
        printf("\nenter your choice");
        scanf("%d",&input);
        
        switch(input)
        {
            case 1: printf("\nenter the item to be pushed: ");
                    scanf("%d",&item);
                    push(item,&s);
                    break;
            case 2: item = pop(&s);
                    if(item!=0)
                        printf("item %d is popped from the stack",item);
                    break;
            case 3: display(&s);
                    break;
            case 4: exit(0);
            default : printf("\nincorrect choice"); continue;
        }

    }
}
